&lt;span style="color:#ff79c6">var&lt;/span> testServer: SparkServer&amp;lt;YourTest&amp;gt; = SparkServer(YourTest&lt;span style="color:#ff79c6">::&lt;/span>&lt;span style="color:#ff79c6">class&lt;/span>.java, &lt;span style="color:#bd93f9">4567&lt;/span>)
